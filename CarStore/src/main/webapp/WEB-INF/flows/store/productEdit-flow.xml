<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">


    <input name="prod" type="com.javaextreme.carstore.domain.vehicles.Product"/>

    <view-state id="store" view="store.xhtml">
        <transition on="_eventId_view" to="view"/>
    </view-state>

    <view-state id="view" view="view.xhtml" model="prod">
        <transition on="_eventId_edit" to="editInfo"/>
    </view-state>

    <view-state id="editInfo" view="edit.xhtml">
        <transition on="_eventId_updateProduct" to="updated">
            <evaluate expression="productdao.update(product)"/>
        </transition>
    </view-state>

    <end-state id="updated" view="updated.xhtml"/>
</flow>